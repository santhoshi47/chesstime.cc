import java.util.*;
import java.lang.*;
import java.io.*;


class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
	 int n,x1,x2,y1,y2;
	Scanner s=new Scanner(System.in);
	n=s.nextInt();
for(int i=0;i<n;i++){
	 		    x1=s.nextInt();
	y1=s.nextInt();
	 	x2=s.nextInt();
	 		y2=s.nextInt();{
	 		if(x1+y1<x2+y2)
	 		{
	 		    System.out.println(x1+y1);
	 		}else
	 		System.out.println(x2+y2);
	}}
}}
