import java.util.*;
import java.lang.*;
import java.io.*;
class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
	    int t,n,x;
	    double h;
		Scanner s=new Scanner(System.in);
		t=s.nextInt();

		    for(int i=0;i<t;i++){
		    n=s.nextInt();
		    x=s.nextInt();
		    
		    if(n<6){
		    System.out.println(x);}
		    
		   else if(n%6==0){
		    System.out.println(x*(n/6));}
		    else{
		    System.out.println(((n/6)*x)+x);
		}}
	}
}
